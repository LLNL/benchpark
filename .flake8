# -*- conf -*-
# flake8 settings for thicket
#
# These are the flake8 settings recommended by Black
# See https://github.com/psf/black
#
[flake8]
max-line-length = 88
select = C,E,F,W,B,B950
ignore = E501,W503,E203

per-file-ignores =
  modifiers/*/modifier.py:F403,F405

builtins = IPython
exclude =
  .eggs,
  .git,
  .hg,
  .mypy_cache,
  .tox,
  .venv,
  _build,
  buck-out,
  build,
  dist,
  repo
